{
  "name": "project-dashboard",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Dashboard for managing project lifecycle and Cloudflare tunnels",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --exec node src/server.js",
    "test": "node --test src/__tests__/**/*.test.js src/**/*.test.js --coverage",
    "test:watch": "nodemon --exec 'node --test src/__tests__/**/*.test.js src/**/*.test.js' --watch src"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  }
}
